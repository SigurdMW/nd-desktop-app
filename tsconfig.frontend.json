{
  "compilerOptions": {
    "module": "ESNext",
    "noImplicitAny": true,
	"strict": true,
	"target": "ES5",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
	"experimentalDecorators": true,
	"rootDir": "./src",
	"moduleResolution": "Node",
	"importHelpers": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src/frontend/**/*",
	"src/globals.d.ts",
	"src/types/*"
  ]
}