{
  "name": "nd-desktop-app",
  "version": "1.0.0",
  "description": "A simple desktop app built with Electron",
  "main": "dist/main.js",
  "scripts": {
    "dev:web": "es-dev-server --app-index index.html --node-resolve --watch --open",
    "serve": "concurrently \"npm:dev:web\" \"npm:watch:styles\" \"npm:watch:webcomponents\"",
    "watch:componentstyles": "concurrently \"npm:watch:styles\" \"npm:watch:webcomponents\"",
    "build:webcomponents": "rimraf build && rollup -c",
    "watch:webcomponents": "rollup -c --watch",
    "build:compileelectron": "tsc --project ./tsconfig.electron.json",
    "build": "npm run validate:defaultconfig && npm run build:compileelectron && npm run build:webcomponents && npm run build:styles",
    "validate:defaultconfig": "tsc ./scripts/validateDefaultConfig.ts && node ./scripts/validateDefaultConfig.js",
    "dev": "concurrently \"npm:watch:styles\" \"npm:dev:web\"",
    "watch:styles": "npx tailwindcss -i ./src/style.css -o ./dist/style.css --watch",
    "build:styles": "npx tailwindcss -i ./src/style.css -o ./dist/style.css",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run build && electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "repository": "https://github.com/SigurdMW/nd-desktop-appt",
  "keywords": [],
  "author": "Sigurd Moland Wahl",
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/js-yaml": "^4.0.5",
    "@types/serialport": "^8.0.2",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "electron": "^17.0.0",
    "es-dev-server": "^2.1.0",
    "eslint": "^8.8.0",
    "eslint-plugin-lit": "^1.6.1",
    "rollup": "^2.67.2",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "js-yaml": "^4.1.0",
    "lit": "^2.1.4",
    "lit-html": "^2.1.3",
    "serialport": "10.2.2",
    "update-electron-app": "^2.0.1",
    "zod": "^3.11.6"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "NorskDisplay"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
