{
  "name": "nd-desktop-app",
  "version": "1.0.0",
  "description": "A simple desktop app built with Electron",
  "main": "dist/main.js",
  "scripts": {
    "dev:web": "es-dev-server --app-index index.html --node-resolve --watch --open",
    "serve": "concurrently \"npm:dev:web\" \"npm:watch:styles\" \"npm:watch:webcomponents\"",
    "watch:componentstyles": "concurrently \"npm:watch:styles\" \"npm:watch:webcomponents\"",
    "build:webcomponents": "rimraf build && rollup -c",
    "watch:webcomponents": "rollup -c --watch",
    "build": "tsc --project ./tsconfig.electron.json && npm run build:webcomponents && npm run build:styles",
    "dev": "concurrently \"npm:watch:styles\" \"npm:dev:web\"",
    "watch:styles": "npx tailwindcss -i ./src/style.css -o ./dist/style.css --watch",
	"build:styles": "npx tailwindcss -i ./src/style.css -o ./dist/style.css",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run build && electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
	"postinstall": "electron-builder install-app-deps"
  },
  "repository": "https://github.com/SigurdMW/nd-desktop-appt",
  "keywords": [],
  "author": "Sigurd Moland Wahl",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/serialport": "^8.0.2",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "concurrently": "^7.0.0",
    "electron": "^16.0.8",
    "electron-builder": "^22.14.13",
    "electron-rebuild": "^3.2.7",
    "es-dev-server": "^1.47.0",
    "eslint": "^7.32.0",
    "eslint-plugin-lit": "^1.6.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.7.6",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-minify-html-literals": "^1.2.3",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.3.0",
    "tailwindcss": "^3.0.18",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@babel/runtime": "^7.9.6",
    "@webcomponents/template": "^1.4.2",
    "core-js": "^3.21.0",
    "electron-squirrel-startup": "^1.0.0",
    "lit": "^2.1.2",
    "lit-html": "^2.1.2",
    "regenerator-runtime": "^0.13.5",
    "serialport": "^10.2.2"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "nd_desktop_app"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "build": {
	"asar": false,
    "appId": "com.electron.norskdisplayapp",
    "productName": "Norsk Display",
    "win": {
      "target": "nsis",
      "icon": "static/favivon.ico"
    },
	"files": [
		"./dist/**/*",
		"./index.html"
	],
	"extraMetadata": {
		"main": "dist/main.js"
	},
	"extends": null
  }
}
